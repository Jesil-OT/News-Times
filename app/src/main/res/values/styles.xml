<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- News Bottom Navigation Style -->
    <style name="NewsBottomNavigationStyle">
        <item name="itemIconSize">24sp</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="menu">@menu/news_menu_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>


    <!-- Top Headlines View Pager Layout Style -->
    <style name="HeadlinesViewPagerLayoutTitleStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HeadlinesViewPagerLayoutAuthorStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/content_headlines_title_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLength">50</item>
    </style>


    <!-- Everything View Pager Layout Style -->
    <style name="EverythingViewPagerLayoutTitleStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="EverythingViewPagerLayoutAuthorStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!-- Headlines Fragment Style -->
    <style name="HeadlinesFragmentBadInternetTextStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/no_internet_message</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeadlinesFooterBadInternetTextStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/no_internet_message</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RetryButtonStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/retry</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/blue</item>
    </style>


    <!-- News Home Fragment Style -->
    <style name="HomeFragmentViewPagerDummyFirstTitleStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dp</item>
        <item name="android:text">@string/top_headlines</item>
    </style>

    <style name="HomeFragmentViewPagerDummySecondTitleStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dp</item>
        <item name="android:text">@string/other_news</item>
    </style>

    <style name="HomeFragmentViewPagerDummySeeAllStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">7dp</item>
        <item name="android:text">@string/see_all</item>
        <item name="android:background">@drawable/content_headlines_title_background</item>
    </style>


    <!-- item layout style -->
    <style name="ItemLayoutNewsSourceNameStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ItemLayoutNewsTitleStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItemLayoutNewsContentStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemLayoutNewsAuthorStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">51</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@drawable/content_headlines_title_background</item>
    </style>

    <style name="ItemLayoutNewsReadMoreUrlStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/read_more</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:drawableRight">@drawable/ic_globe</item>
        <item name="android:drawableTint">@android:color/holo_green_dark</item>
    </style>

</resources>